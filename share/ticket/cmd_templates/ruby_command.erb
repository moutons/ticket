$LOAD_PATH.unshift File.join(ENV['_TICKET_ROOT'], 'share/ticket')

require 'clamp'

class <%= @name.capitalize %>Command < Clamp::Command
  option '--complete', :flag, 'autocomplete output', hidden: true

  parameter '[FILE]', 'file', :attribute_name => :file

  def execute
    return autocomplete if complete?

    # example usage
    # unless File.exists?(file)
    #   signal_usage_error "file doesn't exist"
    # end

    # Put the rest of the <%= @name %> command here
  end

  def autocomplete
    opts = %w{ --help }

    puts opts.join("\n")
  end
end

<%= @name.capitalize %>Command.run
